<div class="container">
    <main class="form-signin w-100 m-auto">
        <form action="/edit_profile_request", method="post">
          <!-- We add an extra input field that helps with csrf authentication -->
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
          
          <h1 class="h3 mb-3 fw-normal">Edit Profile</h1>
  
          <style>
            .form-floating{
              margin-top: 5px;
              margin-bottom: 5px;
            }
          </style>
  
          <% if(edit_profile_error_message != null){ %>
            <div class="alert alert-danger" role="alert">
              <%=edit_profile_error_message%>
            </div>
            <% } %>

            <div class="form-floating">
              <input type="email" class="form-control" id="email" name="email" placeholder="name@example.com" value="<%=user_data.email%>">
              <label for="floatingInput">Email address</label>
            </div>
            <div class="form-floating">
              <input type="text" class="form-control" id="name" name="name" placeholder="John Doe" value="<%=user_data.name%>">
              <label for="floatingInput">Name</label>
            </div>          
                
          <input class="w-100 btn btn-lg btn-primary" type="submit">
        </form>
      </main>
  </div>