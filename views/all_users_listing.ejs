<style>
    .bd-placeholder-img {
      font-size: 1.125rem;
      text-anchor: middle;
      -webkit-user-select: none;
      -moz-user-select: none;
      user-select: none;
    }

    @media (min-width: 768px) {
      .bd-placeholder-img-lg {
        font-size: 3.5rem;
      }
    }

    .b-example-divider {
      height: 3rem;
      background-color: rgba(0, 0, 0, .1);
      border: solid rgba(0, 0, 0, .15);
      border-width: 1px 0;
      box-shadow: inset 0 .5em 1.5em rgba(0, 0, 0, .1), inset 0 .125em .5em rgba(0, 0, 0, .15);
    }

    .b-example-vr {
      flex-shrink: 0;
      width: 1.5rem;
      height: 100vh;
    }

    .bi {
      vertical-align: -.125em;
      fill: currentColor;
    }

    .nav-scroller {
      position: relative;
      z-index: 2;
      height: 2.75rem;
      overflow-y: hidden;
    }

    .nav-scroller .nav {
      display: flex;
      flex-wrap: nowrap;
      padding-bottom: 1rem;
      margin-top: -1px;
      overflow-x: auto;
      text-align: center;
      white-space: nowrap;
      -webkit-overflow-scrolling: touch;
    }

    .main-user-listing-system{
        margin-left: auto;
        margin-right: auto;
    }

    .all-user-heading{
        background-color: #0d6efd;
        border-radius: 5px;
    }

    .user-listing-item{
        background-color: bisque;
        border-radius: 5px;
    }

  </style>

  <!-- Custom styles for this template -->
  <link href="css/sidebars.css" rel="stylesheet">

    <div class="d-flex flex-column align-items-stretch flex-shrink-0 bg-white main-user-listing-system" style="width: 380px;">
        <div class="d-flex align-items-center flex-shrink-0 p-3 link-dark text-decoration-none border-bottom all-user-heading">
        <span class="fs-5 fw-semibold" style="color: white;">All Users</span>
        </div>
        
        <%for (const user of users) {%>
            <div class="list-group list-group-flush border-bottom scrollarea user-listing-item">
                <a href="/chat_interface?receiver=<%=user.username%>" class="list-group-item list-group-item-action py-3 lh-sm">
                <div class="d-flex w-100 align-items-center justify-content-between">
                    <strong class="mb-1"><%=user.name%></strong>
                </div>
                <div class="col-10 mb-1 small"><%=user.username%></div>
                </a>
            </div>
        <%}%>
    
    
    </div>

  <script src="js/sidebars.js"></script>