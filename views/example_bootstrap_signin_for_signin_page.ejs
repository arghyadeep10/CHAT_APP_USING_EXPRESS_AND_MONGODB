<div class="container">
  <main class="form-signin w-100 m-auto">
      <form action="/login_request", method="post">
        <!-- We add an extra input field that helps with csrf authentication -->
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <% if(username_registered_just_now != null){ %>
          <div class="alert alert-success" role="alert">
            Hi <%=username_registered_just_now%>, you have been successfully registered. Go Ahead and Sign In !
          </div>
        <% } %>

        <% if(login_error == true){ %>
          <div class="alert alert-danger" role="alert">
            Invalid Username or Password
          </div>
        <% } %>
        
        <h1 class="h3 mb-3 fw-normal">Sign In</h1>

        <style>
          .form-floating{
            margin-top: 5px;
          }
        </style>
    
        <div class="form-floating">
          <input type="text" class="form-control" id="username" name="username" placeholder="johndoe_1234">
          <label for="floatingInput">Username</label>
        </div>
        <div class="form-floating">
          <input type="password" class="form-control" id="password" name="password" placeholder="Password">
          <label for="floatingPassword">Password</label>
        </div>
    
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
      </form>
    </main>
</div>